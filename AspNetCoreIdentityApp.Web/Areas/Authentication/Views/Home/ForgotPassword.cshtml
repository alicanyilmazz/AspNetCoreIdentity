@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Areas/Authentication/Views/Shared/_Layout.cshtml";
}
@model ForgotPasswordViewModel
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="container">
    <div class="card" style="margin-top:5%;">
        <h3 class="card-header">Reset Password</h3>
        <div class="card-body">
            @if (@TempData["SuccessMessage"] is not null)
            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Well done!</strong> @TempData["SuccessMessage"]
                </div>
            }

            <div asp-validation-summary=ModelOnly class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <form asp-area="Authentication" asp-controller="Home" asp-action="ForgotPassword" method="post">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <div class="mb-1 ">
                    <div class="d-flex align-items-center">
                        <i class="fa-regular fa-envelope" style="margin-right:10px;"></i>
                        <input asp-for="Email" class="form-control" for="Email" aria-describedby="EmailError" placeholder="Email">
                    </div>
                    <span class="text-danger" asp-validation-for="Email" style="margin-left:5%;"></span>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-arrow-right-to-bracket"></i> Send </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-muted">
            <div class="d-flex justify-content-center">
                <div>
                    <a asp-area="Authentication" asp-controller="Home" asp-action="SignUp">Don't you have an account? Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

